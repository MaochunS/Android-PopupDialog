<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@null">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/common_alert_background_shape"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textview_refund_confirm_title"
            android:layout_width="280dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:text="Test dialog title"
            android:textColor="#282828"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textview_refund_confirm_body"
            android:layout_width="280dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:text="Test dialog message"
            android:textColor="#A5A5A5"
            android:textSize="16sp" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:text="Momo"
            android:textColor="#282828"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText_refund_memo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="Momo"
            android:ems="10"
            android:gravity="top"
            android:padding="10dp"
            android:background="@drawable/refund_memo_edit_bg"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_common_alert_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/common_alert_button"
                android:onClick="onCancelButtonClick"

                android:textSize="15sp"
                android:textColor="#9C9C9C"
                android:text="Cancel" />

            <Button
                android:id="@+id/button_common_alert_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/common_alert_button"
                android:onClick="onOKButtonClick"

                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:text="OK" />

        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
